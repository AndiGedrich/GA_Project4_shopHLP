<!DOCTYPE html>
<html>
  <head>
    <title>Shop HLP</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <script src="/javascripts/mainController.js"></script>
    <script src="/javascripts/businesses.service.js"></script>
    <script src="/javascripts/businessController.js"></script>
    <script src="/javascripts/calendarController.js"></script>
    <script src="/javascripts/calendarController.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-moment/0.9.0/angular-moment.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body ng-app="shopHLP">
  <div class="container-fluid" ng-controller="MainController as main">
    <div id="searchBar" class="row">
      <div class="col-md-2">
        <img id="logo" src="images/hlp.png">
      </div>
      <div class="col-md-3">
        <h3>Shop Highland Park</h3>
      </div>
      <div class="col-md-3">
        <select class="form-control" ng-model="main.selectedType" ng-options="type for type in main.types"></select>
      </div>
      <div class="col-md-3">
        <input type="search" class="form-control"  placeholder="search...">
      </div>
    </div>
<!--banner carousel -->
    <div class="row">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <img id="banner" src="images/banner.jpg">
            <div class="carousel-caption">
              <h3>Lorem</h3>
              <p>Something about this picture</p>
            </div>
          </div>

          <div class="item">
            <img id="banner" src="images/banner2.jpg">
            <div class="carousel-caption">
              <h3>Highland Park's Newest Eatery - Recess</h3>
              <p>Open Now!</p>
            </div>
          </div>

          <div class="item">
            <img id="banner" src="images/banner3.jpg">
            <div class="carousel-caption">
              <h3>New Brew</h3>
              <p>Coffee Gets Civil</p>
            </div>
          </div>

        </div>

      <!--controls -->

      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Prev</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
<!--break into partial -->
    <div class="row" id="discover">
      <div class="col-xs-4 col-md-4" id="">
        <h2> DISCOVER</h2>
      </div>
      <div class="col-xs-4 col-md-4" id="4935york">
        <img class="btn" id="yorkbtn" src="images/York.jpg">
      </div>

      <div class="col-xs-4 col-md-4" id="figueroa">
        <img class="btn" id="figst" src="images/Fig.jpg">
      </div>
    </div>

    <!-- storefront display -->
    <div class="row" ng-controller="BusinessController as biz">
      <div class="container slider">
        <figure id="storeFronts" ng-repeat="businesses in biz.businesses">
          <img  id="storeFronts" ng-src="{{businesses.storefront}}" />
          <figcaption id="storeFrontAddress">{{businesses.name}}</figcaption>
        </figure>
      </div>
        <a class="arrow prev" href="#" ></a>
        <a class="arrow next" href="#" ></a>
      </div>
    </div>


  </div> <!--end of first container-->

<!--calendar -->
  <div class="container">
    <div ng-controller="CalendarController as vm">
      <h2 class="text-center">HLP Happenings</h2>

      <div class="row">

        <br class="visible-xs visible-sm">

        <div class="col-md-6">
          <div class="btn-group">
            <label class="btn-primary" ng-model="vm.calendarView" uib-btn-radio="'month'">Month</label>
            <label class="btn-primary" ng-model="vm.calendarView" uib-btn-radio="'week'">Week</label>
            <label class="btn-primary" ng-model="vm.calendarView" uib-btn-radio="'day'">Day</label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5">
          <p>{{vm.date | amDateFormat: 'dddd, MMMM Do YYYY'}}</p>
          <span class="glyphicon glyphicon-chevron-right"></span>
            <h2>{{vm.date | amDateFormat: 'MMMM YYYY'}}</h2>
          <span class="glyphicon glyphicon-chevron-left"></span>
        </div>
      </div>

      <table border="3" cellspacing="3" cellpadding="3">
        <tr>
          <td>Sunday</td>
          <td>Monday</td>
          <td>Tuesday</td>
          <td>Wednesday</td>
          <td>Thursday</td>
          <td>Friday</td>
          <td>Saturday</td>
        </tr>
        <tr>
          <td ng-repeat="days in month">

        </table>



      <br>









    </div>
  </body>
</html>
