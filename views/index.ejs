<!DOCTYPE html>
<html>
  <head>
    <title>Shop HLP</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.16/angular-resource.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <script src="/javascripts/businesses.service.js"></script>
    <script src="/javascripts/businessController.js"></script>
    <script src="/javascripts/events.service.js"></script>
    <script src="/javascripts/calendarController.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-moment/0.9.0/angular-moment.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.min.js"></script>
    <script src="/javascripts/mainController.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>



  </head>
  <body ng-app="shopHLP">

  <div class="container-fluid" ng-controller="MainController as main">
    <div id="searchBar" class="row">
      <div class="col-md-2" >
        <img id="logo" src="images/hlp.png" ng-click="main.returnHome()">
      </div>
      <div class="col-md-3">
        <h3>Shop Highland Park</h3>
      </div>
      <div style="float:right">
        <span class="glyphicon glyphicon-calendar" aria-hidden="true" style="color:white"></span>
        <ui-sref-active="active" ui-sref="calendar" id="navCalBtn">HLP Events</a>
      </div>
    </div>
<!--banner carousel -->
    <div class="row" id="slides_control" >
      <div>
        <carousel interval="main.myInterval">
          <slide ng-repeat="image in main.bannerImages" active="slide.active">
            <img id="banner" ng-src="{{image.image}}">
            <div class="carousel-caption">
              <h3>{{image.caption}}</h3>
              <p>{{image.caption2}}</p>
            </div>
          </slide>
        </carousel>
      </div>
    </div>


    </div>

<!--break into partial -->
  <div class="container-fluid" ui-view>

  </div>

  <footer class="footer">
    <button type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#myModal">
      Business Log In
    </button>

<!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
    <!--modal content -->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h2 class="modal-title center">Log In</h2>
            </div>
            <div class="modal-body">
              <div class="tabbable">
                <ul class="nav nav-tabs">
                  <li class="active"><a href="#tab1" data-toggle="tab">Have an Account?</a></li>
                  <li><a href="#tab2" data-toggle="tab">Register New Account</a></li>
                </ul>
              <div class="tab-content">
              <div class="tab-pane active" id="tab1">
                <form action="/login" method="post">
                  <div>
                    <label>Email</label>
                    <input class="input" type="text" name="email" value="" placeholder="email"/>
                  </div>
                  <div>
                    <label>Password</label>
                    <input class="input" type="password" name="password" value="" placeholder="password"/>
                  </div>
                  <input id="submit-login" type="submit" value="login">
                </form>
              </div>
              <div class="tab-pane" id="tab2">
                <form action="/register" method="post">
                  <div>
                    <label>Email</label>
                    <input class="input" type="text" name="email" value="" placeholder="email"/>
                  </div>
                  <div>
                    <label>Password</label>
                    <input class="input" type="password" name="password" value="" placeholder="password"/>
                  </div>
                  <div>
                    <label>Confirm Password</label>
                    <input class="input" type="password" name="password" value="" placeholder="password"/>
                  </div>
                 <div>
                    <label>Registration Key</label>
                    <input class="input" type="text" name="registrationKey" value="" placeholder="registration key"/>
                  </div>
                    <input id="submit-register" type="submit" value="register">
                </form>
              </div>
              </div>
              </div>
            </div>
            <div class="modal-footer">
              <input type="button" data-dismiss="modal" value="cancel">
            </div>
          </div>
        </div>
    </div>
  </footer>

  </body>
</html>
