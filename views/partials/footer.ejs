<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title center" id="myModalLabel">Log In</h2>
      </div>
      <div class="modal-body">
        <div class="row">
          <h4 class="center">Or login with your registered account...</h4>
          <div class="col-md-12 center">
              <form action="/login" method="post">
                <div>
                <input class="input" type="text" name="email" value="" placeholder="email"/>
                </div>
                <div>
                <input class="input" type="password" name="password" value="" placeholder="password"/>
                </div>
                <input id="submit-login" type="submit" value"login">
              </form>
          </div>
          <div class="col-md-12 center">
            <div class="modal-header">
              <h2 class="modal-title center" id="myModalLabel">Sign Up</h2>
            </div>
            <div class="row">
              <form action="/signup" method="post">
                <div id="signup-spacer">
                <input class="input" type="text" name="firstName" value="" placeholder="first name"/>
                </div>
                <div>
                <input class="input" type="text" name="lastName" value="" placeholder="last name"/>
                </div>
                <div>
                <input class="input" type="text" name="email" value="" placeholder="email"/>
                </div>
                <div>
                <input class="input" type="password" name="password" value="" placeholder="password"/>
                </div>
                <div>
                <input id="submit-signup" type="submit" value"signUp">
                </div>
              </form>
            </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
